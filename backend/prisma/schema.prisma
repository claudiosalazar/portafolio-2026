// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

// ─── Modelo: Admin (Autenticación del panel AdminJS) ─────────────────────────
model Admin {
  id            Int      @id @default(autoincrement())
  email         String   @unique @db.VarChar(255)
  password_hash String   @db.VarChar(255)

  @@map("admins")
}

// ─── Modelo: Project (Proyectos del portafolio) ──────────────────────────────
model Project {
  id                Int      @id @default(autoincrement())
  created_at        DateTime @default(now())
  title             String   @db.VarChar(255)
  slug              String   @unique @db.VarChar(255)
  project_type      String   @default("development") @db.VarChar(20)
  short_description String   @db.VarChar(500)
  content           String   @db.LongText
  image_1           String?  @db.VarChar(500)
  image_2           String?  @db.VarChar(500)
  image_3           String?  @db.VarChar(500)
  image_4           String?  @db.VarChar(500)
  image_5           String?  @db.VarChar(500)
  technologies      String   @default("") @db.Text
  live_url          String?  @db.VarChar(500)

  @@map("projects")
}

// ─── Modelo: Section (Contenido estático editable) ───────────────────────────
model Section {
  id        Int      @id @default(autoincrement())
  slug      String   @unique @db.VarChar(255)
  title     String   @db.VarChar(255)
  body      String   @db.LongText
  image_url String?  @db.VarChar(500)

  @@map("sections")
}

// ─── Modelo: MenuItem (Menú de navegación principal) ─────────────────────────
model MenuItem {
  id           Int     @id @default(autoincrement())
  label        String  @db.VarChar(255)
  url          String  @db.VarChar(255)
  image_url    String? @db.VarChar(500)
  order        Int     @default(0)
  is_active    Boolean @default(true)
  // Si no es null, este ítem fue auto-creado desde una Section y se sincroniza con ella.
  source_slug  String? @unique @db.VarChar(255)

  @@map("menu_items")
}

// ─── Modelo: FooterBlock (Bloques de contenido del footer) ───────────────────
model FooterBlock {
  id        Int     @id @default(autoincrement())
  group     String  @db.VarChar(100)
  label     String  @db.VarChar(255)
  url       String? @db.VarChar(500)
  icon      String? @db.VarChar(100)
  order     Int     @default(0)
  is_active Boolean @default(true)

  @@map("footer_blocks")
}
